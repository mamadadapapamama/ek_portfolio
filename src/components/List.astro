---
import ScrollReveal from "./ScrollReveal.tsx";
import Badge from "./Badge.astro";

interface ListItemProps {
  title: string;
  description: string;
}

const items: ListItemProps[] = [
  {
    title: "Design & Strategy",
    description: "Figma, Adobe Creative Cloud, UX/UI Design, User Research, Service Design, Design Systems, Mobile App Design"
  },
  {
    title: "Product Strategy & Delivery",
    description: "PRD Writing, MVP Definition, Rapid Prototyping, Design-to-Dev Handoff, Iterative Product Development"
  },
  {
    title: "Frontend & App Development",
    description: "Astro, Tailwind CSS, Flutter, Responsive Web"
  },
  {
    title: "Backend & Product Infrastructure",
    description: "Firebase (Auth, Firestore, Functions), Netlify, Vercel, Git"
  },
  {
    title: "AI & LLM-Powered",
    description: "OpenAI APIs, DeepSeek, Claude, Cursor"
  },
  {
    title: "Cloud & Third-Party APIs",
    description: "Google Cloud APIs, REST APIs"
  },
  {
    title: "Low-Code & Content Ops",
    description: "Notion, Decap CMS, Framer, Headless CMS, Static Site Publishing"
  }
]
---

<section id="features" class="max-w-6xl mx-auto px-4 py-10">
  <ScrollReveal client:load delay={0.1}>
    <h2 class="text-4xl font-bold text-gray-900 text-center">My Toolkit for building V1</h2>
  </ScrollReveal>
  
  <div class="prose prose-lg max-w-none mx-auto text-center">
    <ScrollReveal client:load delay={0.2}>
      <ul class="inline-block text-left">
        {items.map((item) => (
          <li>
            <Badge text={item.title} /> - {item.description}
          </li>
        ))}
      </ul>
    </ScrollReveal>
  </div>
</section>
