---
import ScrollReveal from "./ScrollReveal.tsx";
import Badge from "./Badge.astro";

interface ListItemProps {
  title: string;
  description: string;
}

const items: ListItemProps[] = [
  {
    title: "Design & Strategy",
    description: "Figma, Adobe Creative Cloud, User Research, Prototyping"
  },
  {
    title: "Engineering:",
    description: "Cursor, Claude, Gemini, VS Code, Astro, Tailwind CSS, Swift/SwiftUI"
  },
  {
    title: "Backend & Infrastructure",
    description: "Firebase, Netlify, Vercel, Git"
  },
  {
    title: "AI & Automation",
    description: "LLMs (Claude/OpenAI), Google Cloud APIs, Prompt Engineering, Automation tools"
  },
  {
    title: "Low-Code/No-Code",
    description: "Notion, Framer"
  }
]
---

<section id="features" class="max-w-6xl mx-auto px-4 py-10">
  <ScrollReveal client:load delay={0.1}>
    <h2 class="text-4xl font-bold text-gray-900 text-center">My Toolkit for building V1</h2>
  </ScrollReveal>
  
  <div class="prose prose-lg max-w-none mx-auto text-center">
    <ScrollReveal client:load delay={0.2}>
      <ul class="inline-block text-left">
        {items.map((item) => (
          <li>
            <Badge text={item.title} /> - {item.description}
          </li>
        ))}
      </ul>
    </ScrollReveal>
  </div>
</section>
